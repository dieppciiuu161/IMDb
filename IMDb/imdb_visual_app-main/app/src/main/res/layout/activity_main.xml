<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="16dp">

        <!-- Carousel -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/featured_carousel_viewpager"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Search Bar -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/home_search_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/searchview_background"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:iconifiedByDefault="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/featured_carousel_viewpager"
            app:queryHint="Search IMDb" />



        <!-- Hot Search  -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hot_search_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_search_view" />

        <TextView
            android:id="@+id/featured_today_header"
            style="@style/SectionHeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Featured Today"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hot_search_recyclerview" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/featured_today_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/featured_today_header"
            tools:listitem="@layout/item_news_article" />

        <TextView
            android:id="@+id/what_to_watch_header"
            style="@style/SectionHeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="What to Watch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/featured_today_recyclerview" />

        <!-- "Top 10 This Week" Header -->
        <LinearLayout
            android:id="@+id/top_10_imdb_header_container"
            style="@style/SubSectionHeaderContainerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/what_to_watch_header">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="@drawable/stripe_yellow" />

            <TextView
                android:id="@+id/top_10_imdb_header"
                style="@style/SubSectionHeaderTextStyle"
                android:layout_marginStart="8dp"
                android:text="Top 10 This Week" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_10_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_10_imdb_header_container"
            tools:listitem="@layout/item_film_poster" />

        <!-- "Top picks for you" Header -->
        <LinearLayout
            android:id="@+id/top_picks_header_container"
            style="@style/SubSectionHeaderContainerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_10_recyclerview">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="@drawable/stripe_yellow" />

            <TextView
                android:id="@+id/top_picks_header"
                style="@style/SubSectionHeaderTextStyle"
                android:layout_marginStart="8dp"
                android:text="Top picks for you" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_picks_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_picks_header_container"
            tools:listitem="@layout/item_film_poster" />

        <!-- "In theaters near you" Header -->
        <LinearLayout
            android:id="@+id/in_theaters_header_container"
            style="@style/SubSectionHeaderContainerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_picks_recyclerview">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="@drawable/stripe_yellow" />

            <TextView
                android:id="@+id/in_theaters_header"
                style="@style/SubSectionHeaderTextStyle"
                android:layout_marginStart="8dp"
                android:text="In theaters near you" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/in_theaters_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/in_theaters_header_container"
            tools:listitem="@layout/item_film_poster" />

        <!-- "Fans favorites" Header -->
        <LinearLayout
            android:id="@+id/fans_favorites_header_container"
            style="@style/SubSectionHeaderContainerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/in_theaters_recyclerview">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="@drawable/stripe_yellow" />

            <TextView
                android:id="@+id/fans_favorites_header"
                style="@style/SubSectionHeaderTextStyle"
                android:layout_marginStart="8dp"
                android:text="Fans favorites" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fans_favorites_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fans_favorites_header_container"
            tools:listitem="@layout/item_film_poster" />

        <!-- "Oscar winners" Header -->
        <LinearLayout
            android:id="@+id/oscar_winners_header_container"
            style="@style/SubSectionHeaderContainerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fans_favorites_recyclerview">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="@drawable/stripe_yellow" />

            <TextView
                android:id="@+id/oscar_winners_header"
                style="@style/SubSectionHeaderTextStyle"
                android:layout_marginStart="8dp"
                android:text="Oscar winners" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/oscar_winners_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/oscar_winners_header_container"
            tools:listitem="@layout/item_film_poster" />

        <!-- "Born Today" Header -->
        <LinearLayout
            android:id="@+id/born_today_header_container"
            style="@style/SubSectionHeaderContainerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/oscar_winners_recyclerview">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="@drawable/stripe_yellow" />

            <TextView
                android:id="@+id/born_today_header"
                style="@style/SubSectionHeaderTextStyle"
                android:layout_marginStart="8dp"
                android:text="Born Today" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/born_today_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/born_today_header_container"
            tools:listitem="@layout/item_celebrity_portrait" />

        <!-- "Explore Movies & TV shows" Header -->
        <TextView
            android:id="@+id/explore_movies_header"
            style="@style/SectionHeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Explore Movies &amp; TV shows"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/born_today_recyclerview" />

        <!-- "Streaming Now" Header -->
        <LinearLayout
            android:id="@+id/streaming_now_header_container"
            style="@style/SubSectionHeaderContainerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/explore_movies_header">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="@drawable/stripe_yellow" />

            <TextView
                android:id="@+id/streaming_now_header"
                style="@style/SubSectionHeaderTextStyle"
                android:layout_marginStart="8dp"
                android:text="Streaming Now" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/streaming_now_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/streaming_now_header_container"
            tools:listitem="@layout/item_film_poster" />

        <!-- "Top Box Office" Header -->
        <LinearLayout
            android:id="@+id/top_box_office_header_container"
            style="@style/SubSectionHeaderContainerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/streaming_now_recyclerview">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="@drawable/stripe_yellow" />

            <TextView
                android:id="@+id/top_box_office_header"
                style="@style/SubSectionHeaderTextStyle"
                android:layout_marginStart="8dp"
                android:text="Top Box Office" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_box_office_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_box_office_header_container"
            tools:listitem="@layout/item_film_poster" />

        <!-- "Coming Soon" Header -->
        <LinearLayout
            android:id="@+id/coming_soon_header_container"
            style="@style/SubSectionHeaderContainerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_box_office_recyclerview">

            <View
                android:layout_width="4dp"
                android:layout_height="20dp"
                android:background="@drawable/stripe_yellow" />

            <TextView
                android:id="@+id/coming_soon_header"
                style="@style/SubSectionHeaderTextStyle"
                android:layout_marginStart="8dp"
                android:text="Coming Soon" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/coming_soon_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coming_soon_header_container"
            tools:listitem="@layout/item_film_poster" />

        <!-- "More to Explore" Header -->
        <TextView
            android:id="@+id/more_to_explore_header"
            style="@style/SectionHeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="More to Explore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coming_soon_recyclerview" />

        <!-- "Popular Interests" Header with Stripe (Incomplete in original file) -->
        <LinearLayout
            android:id="@+id/social_buttons_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/more_to_explore_header">

            <ImageButton
                android:id="@+id/btn_social_facebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="IMDb on Facebook"
                android:src="@drawable/ic_facebook_placeholder" />

            <ImageButton
                android:id="@+id/btn_social_twitter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="IMDb on Twitter"
                android:src="@drawable/ic_x_placeholder" />

            <ImageButton
                android:id="@+id/btn_social_instagram"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="IMDb on Instagram"
                android:src="@drawable/ic_instagram_placeholder" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
